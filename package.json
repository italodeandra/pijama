{
  "name": "@italodeandra/pijama",
  "version": "0.1.0",
  "description": "Majapi's framework for building apps",
  "private": true,
  "main": "index.js",
  "typings": "index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "shx rm -rf dist",
    "build": "tsc --build lib/tsconfig.json",
    "postbuild": "shx cp package.json readme.md jest.config.js tsconfig.json next.config.js .eslintrc babel.config.js .lintstagedrc.js .prettierrc.js dist",
    "pre-publish": "npm run build && cd dist && json -I -f package.json -e \"this.private=false; this.devDependencies=undefined; this.scripts=undefined;\"",
    "github:publish": "npm run pre-publish && cd dist && npm publish",
    "yalc:publish": "npm run pre-publish && cd dist && yalc publish --private",
    "test": "jest",
    "doc:dev": "next dev --port 3001",
    "doc:build": "next build",
    "doc:start": "next start",
    "pre-commit": "lint-staged",
    "pre-push": "npm test"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@babel/runtime": "^7.14.0",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@emotion/jest": "^11.3.0",
    "@emotion/react": "^11.1.5",
    "@emotion/serialize": "^1.0.2",
    "@emotion/server": "^11.0.0",
    "@fontsource/inter": "^4.2.2",
    "@iconify/icons-heroicons-outline": "^1.1.2",
    "@iconify/react": "^1.1.4",
    "@next/eslint-plugin-next": "^10.2.0",
    "@testing-library/dom": "^7.30.4",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.6",
    "@types/color": "^3.0.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "15.0.1",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-transition-group": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "axios": "^0.21.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-macros": "^3.1.0",
    "color": "^3.1.3",
