{
  "extends": [
    "react-app",
    "next",
    "next/core-web-vitals"
  ],
  "plugins": [
    "@emotion"
  ],
  "rules": {
    "react/display-name": "off",
    "@next/next/no-html-link-for-pages": "off",
    "sort-imports": [
      "warn",
      {
        "ignoreCase": true
      }
    ],
    "sort-keys": "warn",
    "react/jsx-sort-props": "warn",
    "no-restricted-imports": [
      "warn",
      {
        "paths": [
          {
            "name": "react-use",
            "importNames": [
              "useLogger"
            ],
            "message": "Please remove this before committing."
          }
        ]
      }
    ],
    "jsx-a11y/anchor-is-valid": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "info"
        ]
      }
    ]
  }
}

